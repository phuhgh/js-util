{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "bin/esm",
    "stripInternal": true,
    "moduleResolution": "Node",
    "module": "ES2020",
    "importHelpers": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "target": "ES6",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "ES2021"
    ],
    "types": [
      "jasmine"
    ]
  },
  "include": [
    "src",
  ]
}