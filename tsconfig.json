{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "bin/",
    "noImplicitReturns": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "es5",
      "ES2015.Collection",
      "ES2015.Promise",
      "ES2015.Iterable"
    ],
    "types": [
      "jasmine"
    ]
  },
  "include": [
    "src",
    "external"
  ]
}