{
  "compilerOptions": {
    "outDir": "bin/esm",
    "moduleResolution": "Node",
    "module": "ES2020",
    "importHelpers": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "target": "ES6",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es5",
      "ES2015.Proxy",
      "ES2015.Collection",
      "ES2015.Promise",
      "ES2015.Iterable",
      "ESNext" // WeakRef & FinalizationRegistry, not part of public sig
    ],
    "types": [
      "jasmine"
    ]
  },
  "include": [
    "src",
  ]
}