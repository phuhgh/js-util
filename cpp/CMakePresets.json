{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Debug",
      "generator": "Ninja",
      "binaryDir": "build/${presetName}",
      "toolchainFile": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_JSUTIL_TEST": true
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "inherits": "debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "asan",
      "displayName": "Address sanitized",
      "inherits": "debug",
      "cacheVariables": {
        "JSU_BUILD_MODE": "ASAN"
      }
    },
    {
      "name": "safe-heap",
      "displayName": "Safe heap",
      "inherits": "debug",
      "cacheVariables": {
        "JSU_BUILD_MODE": "SAFE_HEAP"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Debug",
      "configurePreset": "debug",
      "configuration": "Debug"
    }
  ]
}